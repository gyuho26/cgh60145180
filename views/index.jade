extends layout

block hero-unit
  .jumbotron
    .container
      h1 AIRBNC_60145180

block content
  .container
    .row
      .col-md-3
         .form
            h4 위치
            input.form-control(type='text', id='q', size=20, placeholder='나라')
            ul.suggest-box
      .col-md-3
        .form-group
            h4 체크인(상) / 체크아웃(하)
            input.form-control(type='date', id='deadline', name='deadline',size=20, placeholder='체크인')
            ul.suggest-box
        .form-group
            input.form-control(type='date', id='deadline', name='deadline',size=20, placeholder='체크아웃')
            ul.suggest-box
      .col-md-2
        .form
            h4 인원
            select.form-control(name='priority')
              option(value='1') 숙박 인원1명
              option(value='2') 숙박 인원2명
              option(value='3') 숙박 인원3명
              option(value='4') 숙박 인원4명
              option(value='5') 숙박 인원5명
              option(value='6') 숙박 인원6명
              option(value='7') 숙박 인원7명
              option(value='8') 숙박 인원8명
              option(value='9') 숙박 인원9명
              option(value='10') 숙박 인원10명
              option(value='11') 숙박 인원11명
              option(value='12') 숙박 인원12명
              option(value='13') 숙박 인원13명
              option(value='14') 숙박 인원14명
              option(value='15') 숙박 인원15명
              option(value='16', selected) 숙박 인원16+명
            ul.suggest-box
      .col-md-2
        h4 숙서 검색
        .actions
            button.btn.btn-primary.btn-lg.btn-block 숙소 검색
        //.form
            button.fa.fa-search.fa-5x
